<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css"
        integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Modern Student Data Table</title>
    <style>
        /* --- General Styling and Reset --- */
        :root {
            --primary-color: #007bff;
            --secondary-color: #6c757d;
            --success-color: #28a745;
            --danger-color: #dc3545;
            --bg-color: #f8f9fa;
            --card-bg: #ffffff;
            --text-color: #343a40;
            --border-color: #dee2e6;
            --hover-bg: #f2f2f2;
            --border-radius: 8px;
        }

        body {
            font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif;
            background-color: var(--bg-color);
            color: var(--text-color);
            margin: 0;
            padding: 20px;
            line-height: 1.6;
        }

        h1 {
            text-align: center;
            color: var(--primary-color);
            margin-bottom: 25px;
            font-size: 1.8rem;
        }

        /* --- Card Container for Modern Layout --- */
        .container {
            max-width: 95%;
            margin: 0 auto;
            background-color: var(--card-bg);
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        /* --- Button Bar Above Table --- */
        .toolbar {
            display: flex;
            justify-content: flex-end;
            /* Pushes the button to the right */
            margin-bottom: 15px;
        }

        /* --- Add Student Button Styling --- */
        .add-btn {
            background-color: var(--success-color);
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: 600;
            box-shadow: 0 4px 8px rgba(40, 167, 69, 0.3);
            transition: background-color 0.2s, transform 0.1s, box-shadow 0.2s;
        }

        .add-btn:hover {
            background-color: #1e7e34;
            transform: translateY(-2px);
            box-shadow: 0 6px 10px rgba(40, 167, 69, 0.4);
        }

        /* --- Responsive Table Wrapper (The Horizontal Scroll) --- */
        .table-responsive {
            width: 100%;
            overflow-x: auto;
            /* This is the key for horizontal scrolling */
            -webkit-overflow-scrolling: touch;
            /* Smoother scrolling on touch devices */
        }

        /* --- Table Styling --- */
        .data-table {
            width: 100%;
            min-width: 1200px;
            /* Forces horizontal scroll on smaller screens */
            border-collapse: separate;
            border-spacing: 0;
        }

        .data-table th,
        .data-table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid var(--border-color);
            white-space: nowrap;
            /* Prevents text wrap in cells */
        }

        .data-table th {
            background-color: var(--primary-color);
            color: var(--card-bg);
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            position: sticky;
            /* Keep header visible when scrolling horizontally */
            left: 0;
        }

        .data-table tbody tr:hover {
            background-color: var(--hover-bg);
            transition: background-color 0.2s;
        }

        /* Rounding the table corners (specific for first/last cells) */
        .data-table thead tr:first-child th:first-child {
            border-top-left-radius: var(--border-radius);
        }

        .data-table thead tr:first-child th:last-child {
            border-top-right-radius: var(--border-radius);
        }

        .data-table tbody tr:last-child td {
            border-bottom: none;
        }


        /* --- Form/Input Styling within Table (for Edit mode) --- */
        /* Removed styles for inputs/select/textarea as they are no longer in the sample rows */

        /* --- Action Button Styling --- */
        .action-buttons button {
            padding: 8px 12px;
            margin-right: 5px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: 500;
            transition: background-color 0.2s, transform 0.1s;
        }

        .action-buttons .edit-btn {
            background-color: var(--primary-color);
            color: white;
        }

        .action-buttons .edit-btn:hover {
            background-color: #0056b3;
            transform: translateY(-1px);
        }

        .action-buttons .delete-btn {
            background-color: var(--danger-color);
            color: white;
        }

        .action-buttons .delete-btn:hover {
            background-color: #c82333;
            transform: translateY(-1px);
        }

        /* Responsive adjustments for very small screens (if needed, though horizontal scroll handles most of it) */
        @media (max-width: 600px) {
            .container {
                padding: 10px;
            }

            body {
                padding: 10px 5px;
            }
        }

        .no-records {
            width: 100%;
            min-height: 100px;
            /* background-color: #6c757d; */
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px dashed #343a40;
            border-radius: 10px;
        }

        .fa-hard-drive {
            display: inline-block;
            font-size: 1.98em;
        }

        .no-text {
            font-size: 2vw;
        }
    </style>
</head>

<body>

    <div class="container">
        <h1>Student Enrollment Data</h1>

        <div class="toolbar">
            <a href="/register-Student">
                <button class="add-btn">+ Add New Student</button>
            </a>
        </div>

        <%if (user.length> 0 && typeof (user) !== "undefined") {%>
            <div class="table-responsive">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Contact Number</th>
                            <th>Course</th>
                            <th>Batch Code</th>
                            <th>Joining Date</th>
                            <th>Remarks</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%user.map((user, index)=>{%>
                            <tr>
                                <td><%- user.fullName%></td>
                                <td><%- user.email%></td>
                                <td><%- user.contactNumber%></td>
                                <td><%- user.course%></td>
                                <td><%- user.batchCode%></td>
                                <td><%- user.createdAt%></td>
                                <td><%- user.remarks%></td>
                                <td class="action-buttons">
                                    <a href="/editUser/<%- user._id%>"><button class="edit-btn">Edit</button></a>
                                    <a href="/deleteUser/<%- user._id%>"><button class="delete-btn">Delete</button></a>
                                </td>
                            </tr>
                            <%})%>
                    </tbody>
                </table>
            </div>
            <%} else {%>
                <div class="no-records">
                    <i class="fa-regular fa-hard-drive"></i>
                    <p class="no-text">There are no records</p>
                </div>
                <%}%>

    </div>

    <script>
        const editBtn = document.querySelectorAll('.edit-btn');
        const deleteBtn = document.querySelectorAll('.delete-btn');

        deleteBtn.forEach((btn) => {
            btn.addEventListener('click', (e) => {
                const confirmed = confirm("Are you shure: ");
                if (!confirmed) {
                    e.preventDefault();
                }
            })
        })

        editBtn.forEach((btn) => {
            btn.addEventListener('click', (e) => {
                const confirmed = confirm("Are you shure: ");
                if (!confirmed) {
                    e.preventDefault();
                }
            })
        })
    </script>
</body>

</html>